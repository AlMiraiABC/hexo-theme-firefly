{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/product.schema.json",
  "title": "_config.firefly.yml -share",
  "description": "Sub JSON schema for hexo-theme-firefly share plugins.",
  "type": "object",
  "properties": {
    "addThis": {
      "description": "AddThis share plugin.\nsee more: https://www.addthis.com/",
      "type": "object",
      "properties": {
        "enable": {
          "type": "boolean",
          "description": "Determine whether using AddThis",
          "default": false
        },
        "pubid": {
          "description": "",
          "type": [
            "string",
            "null"
          ]
        },
        "if": {
          "properties": {
            "enable": {
              "const": true
            }
          }
        },
        "then": {
          "required": [
            "pubid"
          ]
        }
      }
    },
    "sharejs": {
      "description": "Share.js share plugin.\nsee more: https://github.com/overtrue/share.js",
      "type": "object",
      "properties": {
        "enable": {
          "description": "Determine whether using Share.js.",
          "type": "boolean",
          "default": true
        },
        "sites": {
          "description": "Sites shared to.",
          "type": [
            "array",
            "null"
          ],
          "items": {
            "enum": [
              "weibo",
              "qq",
              "wechat",
              "douban",
              "qzone",
              "linkedin",
              "facebook",
              "twitter",
              "google"
            ]
          },
          "uniqueItems": true
        }
      }
    },
    "addtoany": {
      "description": "AddToAny share plugin.\nsee more: https://www.addtoany.com/",
      "type": "object",
      "properties": {
        "enable": {
          "description": "Determine whether using AddToAny.",
          "type": "boolean",
          "default": false
        },
        "sites": {
          "type": [
            "array",
            "null"
          ],
          "description": "Sites shared to.",
          "items": {
            "type": "string"
          },
          "uniqueItems": true
        }
      }
    }
  }
}
