nav#nav
  span#blog_name
    a#site-name.pull-left(href=url_for('/')) #[=config.title]

    if theme.weather && theme.weather.enable
      if theme.weather.weather
        span#weather.pull-left
          if theme.weather.plugin=='weather'
            #weather-v2-plugin-simple
            !='<script>'+theme.weather.weather.widget+'</script>'
            script(type="text/javascript",src="https://apip.weatherdt.com/simple/static/js/weather-simple-common.js?v=2.0")
          if theme.weather.plugin=='qweather'
            #he-plugin-simple
            !='<script>'+theme.weather.qweather.widget+'</script>'
            script(type="text/javascript",src="https://widget.qweather.net/simple/static/js/he-simple-common.js?v=2.0")

  #menus
    if (theme.algolia_search.enable || theme.local_search.enable)
      #search-button
        a.site-page.social-icon.search
          i.fas.fa-search.fa-fw
          span=' '+_p('search.title')
    !=partial('includes/header/menu_item', {}, {cache: true})

    #toggle-menu
      a.site-page
        i.fas.fa-bars.fa-fw
