#footer-wrap
  if theme.footer.owner.enable
    - var now = new Date()
    - var nowYear = now.getFullYear()
    if theme.footer.owner.since && theme.footer.owner.since != nowYear
      .copyright!= `&copy;${theme.footer.owner.since} - ${nowYear} By ${config.author}`
    else
      .copyright!= `&copy;${nowYear} By ${config.author}`
  if theme.footer.copyright
    .framework-info
      span= _p('footer.framework') + ' '
      a(href='https://hexo.io')= 'Hexo'
      span.footer-separator |
      span= _p('footer.theme') + ' '
      a(href='https://github.com/AlMiraiABC/hexo-theme-firefly')= 'FireFly'
  if theme.footer.upyun
    a(href="https://www.upyun.com/?utm_source=lianmeng&utm_medium=referral" target="_blank" rel="noopener")
      img(style="height:17px;vertical-align:sub;" src="/img/upyun_logo.png" alt="upyun logo")
      span="提供CDN加速/云存储服务"

  if theme.footer.custom_text
    .footer_custom_text!=`${theme.footer.custom_text}`

  if theme.footer.icp.enable
    - const icp = theme.footer.icp
    .icp
      a(href=icp.url)
        - const src = icp.icon || "/img/icp.png"
        img.icp-icon(src=src alt="PRC ICP badge")
        span=icp.text
